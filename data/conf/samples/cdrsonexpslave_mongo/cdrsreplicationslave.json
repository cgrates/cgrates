{
// CGRateS Configuration file
//
// Used in apier_local_tests
// Starts rater, cdrs and mediator connecting over internal channel

"listen": {
	"rpc_json": "127.0.0.1:12012",			// RPC JSON listening address
	"rpc_gob": "127.0.0.1:12013",			// RPC GOB listening address
	"http": "127.0.0.1:12080",				// HTTP listening address
},

"db": {
	"db_conns": {
		"*default": {
			"db_type": "mongo",
			"db_host": "127.0.0.1",	
			"db_port": 27017,
			"db_name": "10",
			"db_user": "cgrates"
		},
		"StorDB": {
			"db_type": "mongo",
			"db_host": "127.0.0.1",	
			"db_port": 27017,
			"db_name": "cgrates",
			"db_user": "cgrates"
		}
	},
	"items": {
		"*cdrs": {"limit": -1, "ttl": "", "static_ttl": false, "remote":false, "replicate":false, "dbConn": "StorDB"}
	}
},

"cdrs": {
	"enabled": true,						// start the CDR Server service:  <true|false>
	"chargers_conns":["*internal"],
	"rates_conns": ["*internal"],
},

"chargers": {
	"enabled": true,
},

"rates": {
	"enabled": true,
},


"admins": {
	"enabled": true,
},


}