{
// CGRateS Configuration file
//
// Used in apier_local_tests
// Starts rater, cdrs and mediator connecting over internal channel

"listen": {
        "rpc_json": ":2012",
        "rpc_gob": ":2013",
        "http": ":2080",
},

"rals": {
	"enabled": true,
	"cdrstats_conns": [
		{"address": "*internal"}
	],
},

 "cdrs": {
	"enabled": true,
	"store_cdrs": false,
	 "rals_conns": [
		{"address": "*internal"}
	],
	"cdrstats_conns": [
		{"address": "*internal"}
	]
},

"cdrstats": {
	"enabled": true,
    "save_interval": "1s",
},

}
