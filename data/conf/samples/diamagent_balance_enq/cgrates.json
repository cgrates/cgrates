{
"apiers": {
	"enabled": true
},
"sessions": {
	"enabled": true,
	"attributes_conns": ["*localhost"]
},
"attributes": {
	"enabled": true,
	"apiers_conns": ["*localhost"]
},
"diameter_agent": {
	"enabled": true,
	"listeners":[{"address":"127.0.0.1:3868","network": "tcp"}],
	"sessions_conns": ["*bijson_localhost"],
	"request_processors": [
	{
		"id": "balance_enquiry_query",
		"filters": [
			"*string:~*vars.*cmd:CCR",
			"*prefix:~*req.Service-Context-Id:manager",
			"*string:~*req.CC-Request-Type:4",
			"*string:~*req.Service-Identifier:1"
		],
		"flags": [
			"*message",
			"*attributes"
		],
		"request_fields": [
			{
				"tag": "Category",
				"path": "*cgreq.Category",
				"type": "*constant",
				"value": "sms"
			},
			{
				"tag": "Account",
				"path": "*cgreq.Account",
				"type": "*variable",
				"mandatory": true,
				"value": "~*req.Subscription-Id.Subscription-Id-Data[~Subscription-Id-Type(0)]"
			}
		],
		"reply_fields": [
			{"tag": "CCATemplate", "type": "*template", "value": "*cca"},
			{
				"tag": "ResultCode",
				"path": "*rep.Result-Code",
				"filters": ["*notempty:~*cgrep.Error:"],
				"type": "*constant",
				"value": "5030"
			},
			{
				"tag": "MonetaryValueDigits",
				"path": "*rep.Cost-Information.Unit-Value.Value-Digits",
				"type": "*variable",
				"value": "~*cgrep.Attributes.MonBalance",
				"mandatory": true
			},

		]
	}]
}
}