
{

"diameter_agent": {
	"request_processors": [
		{
			"id": "simpa_event",
			"filters": [
				"*string:~*vars.*cmd:CCR",
				"*string:~*req.CC-Request-Type:4",
				"*prefix:~*req.Service-Context-Id:simpa"
			],
			"flags": ["*message", "*accounts", "*log"],
			"request_fields":[
				{
					"tag": "ToR",
					"path": "*cgreq.ToR",
					"type": "*constant",
					"value": "*generic"
				},
				{
					"tag": "OriginID",
					"path": "*cgreq.OriginID",
					"type": "*variable", 
					"value": "~*req.Session-Id",
					"mandatory": true
				},
				{
					"tag": "RequestType",
					"path": "*cgreq.RequestType",
					"type": "*constant",
					"value": "*prepaid"
				},
				{
					"tag": "Category",
					"path": "*cgreq.Category",
					"type": "*constant",
					"value": "generic"
				},
				{
					"tag": "Account",
					"path": "*cgreq.Account",
					"type": "*variable",
					"mandatory": true, 
					"value": "~*req.Subscription-Id.Subscription-Id-Data[~Subscription-Id-Type(0)]"
				},
				{
					"tag": "AnswerTime",
					"path": "*cgreq.AnswerTime",
					"type": "*variable", 
					"value": "~*req.Event-Timestamp",
					"mandatory": true
				},
				{
					"tag": "Usage",
					"path": "*cgreq.Usage",
					"type": "*valueExponent",
					"mandatory": true, 
					"value": "~*req.Requested-Service-Unit.CC-Money.Unit-Value.Value-Digits;~*req.Requested-Service-Unit.CC-Money.Unit-Value.Exponent"
				},
			],
		},
	],
},

}