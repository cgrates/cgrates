"listen": {
	"rpc_json": ":2012",
	"rpc_gob": ":2013",
	"http": ":2080",
},


"stor_db": {
	"db_password": "CGRateS.org",
},


"schedulers": {
	"enabled": true,
},


"rals": {
	"enabled": true,
	"thresholds_conns": ["*localhost"],
	"stats_conns": ["*localhost"],
	"attributes_conns": ["*localhost"],
},


"cdrs": {
	"enabled": true,
	"stats_conns": ["*localhost"],
